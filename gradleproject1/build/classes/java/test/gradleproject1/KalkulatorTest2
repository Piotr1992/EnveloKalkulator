
package gradleproject1;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;
import gradleproject1.Kalkulator;

public class KalkulatorTest {
    
    Kalkulator calculator = new Kalkulator();
    
    public KalkulatorTest() {
    }
    
    @org.junit.jupiter.api.Test    
    public void testAdd() {        
	assertEquals(5, calculator.add(2, 3));
    }

    @org.junit.jupiter.api.Test    
    public void testSubtract() {        
	assertEquals(-3, calculator.substract(1, 4));
    }

    @org.junit.jupiter.api.Test    
    public void testMultiply() {        
	assertEquals(-30, calculator.multiply(5, -6));
    }

    @org.junit.jupiter.api.Test    
    public void testPower() {        
	assertEquals(343, calculator.power(7, 3));
    }
    
    @org.junit.jupiter.api.Test    
    public void testDivide() {        
	assertEquals(2.667, calculator.divide(8, 3));
    }
    
    @org.junit.jupiter.api.Test    
    public void testStrong() {        
	assertEquals(120, calculator.strong(5));
    }
    
    @org.junit.jupiter.api.Test    
    public void testProcent() {
	assertEquals(0.21, calculator.procent(7, 3));
    }

}
